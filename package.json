  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "homepage": "https://github.com/yourusername/ioBroker.mcp-server",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "mcp",
    "model context protocol",
    "ai",
    "claude",
    "cursor",
    "smart home",
